@model Lanchonete.Models.MateriaPrima

@{
    ViewData["Title"] = "Registrar Compra de Matéria-Prima";
}

<h3>Registrar Compra de Matéria-Prima</h3>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="RegistrarCompra" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label for="MateriaPrimaId" class="control-label">Matéria-Prima:</label>
                <select id="MateriaPrimaId" name="MateriaPrimaId" class="form-control" asp-items="ViewBag.MateriasPrimas"></select>
                <span asp-validation-for="MateriaPrimaId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="QuantidadeComprada" class="control-label">Quantidade Comprada:</label>
                <input type="number" id="QuantidadeComprada" name="QuantidadeComprada" class="form-control" min="0.01" step="0.01" required />
                <span class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="CustoTotal" class="control-label">Custo Total (R$):</label>
                <input type="number" id="CustoTotal" name="CustoTotal" class="form-control" min="0.01" step="0.01" required />
                <span class="text-danger"></span>
            </div>

            <hr />
            <div class="form-group">
                <input type="submit" value="Registrar Compra" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-outline-info">Voltar à Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}